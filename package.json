{
  "name": "bemadralphy",
  "version": "0.1.0",
  "description": "CLI-only orchestrator merging BMAD, Beads, Ralphy, and OpenSpec into an end-to-end automated coding pipeline.",
  "license": "MIT",
  "type": "module",
  "bin": {
    "bemadralphy": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "verify": "npm run typecheck && npm run lint && npm test -- --run",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vitest": "^1.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hxp-pxh/BeMadRalphy.git"
  },
  "homepage": "https://github.com/hxp-pxh/BeMadRalphy#readme",
  "bugs": {
    "url": "https://github.com/hxp-pxh/BeMadRalphy/issues"
  },
  "author": "Hanns Princivil <hprincivil@sharetact.co>",
  "keywords": [
    "cli",
    "ai",
    "automation",
    "bmad",
    "beads",
    "ralphy",
    "openspec",
    "coding",
    "orchestrator",
    "pipeline",
    "developer-tools"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  }
}
